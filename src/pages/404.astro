---
import { SEO } from 'astro-seo'
const title = "404 - Page Not Found"
import '../globals.css'
---
<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/FullColorFavi.svg" />
		<meta name="generator" content={Astro.generator} />
		<SEO title={title} description="Ryan Mullin's Blog" noindex={false} nofollow={false}></SEO>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Raleway:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
	</head>
	<body>
        <h1 class="gradientText font-primary text-center font-extrabold motion-safe:hover:text-purple-700 hover:animate-spin">
			404
		</h1>
		<p class="mainHeader">
			Page Not Found :(
		</p>
		<div class="mx-auto">
			<a href="/" class="bg-green-600 rounded-xl p-4 text-white">Click here to go home</a>
		</div>
	</body>
	<style>
		h1 {
			font-size: 256px;
		}
	</style>
</html>